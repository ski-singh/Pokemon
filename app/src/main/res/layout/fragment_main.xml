<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" android:layout_marginRight="0dp" android:layout_marginEnd="0dp"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            app:background="@drawable/shape"
            app:backgroundTint="#fefefe"
            app:fabSize="normal"
            android:layout_margin="20dp"
            android:src="@drawable/ic_search_green_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

</RelativeLayout>